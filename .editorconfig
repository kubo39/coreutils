[*]
trim_trailing_whitespace = true
end_of_line = lf
insert_final_newline = true

[makefile]
tab_width = 4
indent_size = 4
indent_style = tab

[*.d]
dfmt_brace_style = allman
dfmt_space_after_cast = true
dfmt_space_after_keywords = true
end_of_line = lf
indent_size = 4
indent_style = space
insert_final_newline = true
